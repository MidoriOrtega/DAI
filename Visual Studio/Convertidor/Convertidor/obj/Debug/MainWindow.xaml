<Window x:Class="CalculadoraMaizoro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculadoraMaizoro"
        mc:Ignorable="d"
        Title="Calculadora Maizoro" Height="220" Width="370" FontFamily="Arial">
    <Grid>
        <Label x:Name="lblNum1" Content="Número 1" HorizontalAlignment="Left" Margin="23,22,0,0" VerticalAlignment="Top" FontWeight="Normal"/>
        <Label x:Name="lblNum2" Content="Número 2" HorizontalAlignment="Left" Margin="23,70,0,0" VerticalAlignment="Top" FontWeight="Normal"/>
        <TextBox x:Name="txtNum1" HorizontalAlignment="Left" Height="23" Margin="116,23,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtNum2" HorizontalAlignment="Left" Height="23" Margin="116,71,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblResultado" Content="Resultado" HorizontalAlignment="Left" Margin="23,140,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtResultado" HorizontalAlignment="Left" Height="23" Margin="116,140,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <RadioButton x:Name="rdbSuma" Content="Suma
                     " HorizontalAlignment="Left" Margin="278,82,0,0" VerticalAlignment="Top" Width="70"/>
        <RadioButton x:Name="rdbResta" Content="Resta
                     " HorizontalAlignment="Left" Margin="278,101,0,0" VerticalAlignment="Top" Width="70" RenderTransformOrigin="0.743,-0.548"/>
        <Button x:Name="bttCalcular" Content="Calcular" HorizontalAlignment="Left" Margin="274,146,0,0" VerticalAlignment="Top" Width="75" Click="BttCalcular_Click"/>
        <Label x:Name="lblTitulo" Content="Operaciones" HorizontalAlignment="Left" Margin="260,17,0,0" VerticalAlignment="Top" Height="29" Width="88" FontFamily="Cambria Math" FontWeight="Bold" FontStyle="Italic" FontSize="14"/>
        <Label Content="Básicas" HorizontalAlignment="Left" Margin="293,39,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.496,-0.139" FontWeight="Bold" FontStyle="Italic" FontFamily="Cambria Math" FontSize="14"/>

    </Grid>
</Window>
